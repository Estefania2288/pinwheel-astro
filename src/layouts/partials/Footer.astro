---
import Logo from "@/components/Logo.astro";
import Social from "@/components/Social.astro";
import config from "@/config/config.json";
import menu from "@/config/menu.json";
import social from "@/config/social.json";
import { markdownify } from "@/lib/utils/textConverter";
const { footer } = menu;
const { copyright, location, email, phone, footer_description } = config.params;
---

<footer class="footer bg-[#F1F1F1]">
  <div class="container">
    <div class="gx-5 row pb-8">
      <div class="col-12 mt-12 md:col-6 lg:col-4">
        <Logo />
        <p class="mt-6 text-neutral-600">
          {footer_description}
        </p>
        <!-- <div class="col-12 mt-12 md:col-6 lg:col-4">
          <ul>
            <h5>Contacto</h5>
            <li class="mb-2 mt-2">
              <a class="mb-2 hover:text-primary  text-neutral-600" href={`mailto:${email}`}
                >{email}</a
              >
            </li>
            <li>
              <a
                class="hover:text-primary hover:underline   text-neutral-600"
                href={`tel:${phone}`}>{phone}</a
              >
            </li>
          </ul>
        </div> -->
      </div>
     
      <div class="col-12 mt-12 md:col-6 lg:col-4 flex flex-col justify-center items-center mx-auto">
        <h6>Entradas</h6>
        <ul class="grid grid-cols-2 ">
          {
            footer.map((item, i) => (
              <li class={footer.length - 1 === i ? "mb-0 mx-auto" : "mb-4 mx-auto"}>
                <a class="hover:text-primary hover:underline mx-auto text-neutral-600 col-6" href={item.url}>
                  {item.name}
                </a>
              </li>
            ))
          }
        </ul>
      </div>
      <div class="col-12 mt-12 md:col-6 lg:col-4 flex flex-col justify-around items-center gap-4">
        <h5>Asociados a:</h5>
        <img src="/images/alianza.png" alt="" width="220">
        <img src="/images/cluster.png" alt="" width="70">
      </div>
    </div>
  </div>
  <div class="container max-w-[1440px]">
    <div
      class="footer-copyright mx-auto border-t border-border pt-2 text-center"
    >
      <p class="content text-text" set:html={markdownify(copyright)} />
    </div>
  </div>
</footer>
