---
import PageHeader from "@/components/PageHeader.astro";
import Shape from "@/components/Shape.astro";
import Base from "@/layouts/Base.astro";
import Faq from "@/layouts/function-components/Faq.jsx";
import PricingCard from "@/layouts/function-components/PricingCard.jsx";
import { getEntryBySlug } from "astro:content";

const rural = await getEntryBySlug("rural", "index");
const page_data = {
  ...rural.data,
  content: rural.body,
};
---

<Base
  title={rural.data.title}
  meta_title={rural.data.meta_title}
  description={rural.data.description}
  image={rural.data.image}
>
  <!-- <Shape /> -->
  <section class="page-hero pb-14 pt-16">
    <div class="container">
      <!-- <PageHeader page_data={page_data} /> -->
       <h2>{rural.data.title}</h2>
       <p>{rural.data.description}</p>
    </div>

  </section>
  <!-- rural -->
  <section class="section mt-12 pt-0">
    
    <div class="container">
      
      <div class="row lg:px-10">
        {
          rural.data.pricing_card.map((item: any, i: number) => (
            <PricingCard item={item} client:load />
          ))
        }
      </div>
    </div>
  </section>

  
  <Faq client:load data={rural.data} />
</Base>
